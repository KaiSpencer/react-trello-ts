{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": { "useButtonType": "off" }
		},

		"ignore": [
			"coverage",
			"node_modules",
			"*.story.tsx",
			"dist",
			"src/helpers/autosize.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"ignore": ["node_modules", "dist"]
	}
}
